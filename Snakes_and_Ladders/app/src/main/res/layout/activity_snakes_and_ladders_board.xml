    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/gridlayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:gravity="center">

        <TextView
            android:id="@+id/player1_onRoll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0"
            android:textSize="30dp"
            android:textColor="#ffffff"
            android:padding="4dp"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/player1_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/player1_name"
            android:gravity="center_horizontal"
            android:textColor="#ffffff"
            android:textSize="18dp"
            android:padding="4dp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/player1_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player1_1"
            app:layout_constraintRight_toLeftOf="@+id/dice"
            app:layout_constraintTop_toBottomOf="@id/gridlayout"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_margin="8dp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/dice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/dice2"
            android:onClick="diceRoll"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/player2_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/player2_1"
            app:layout_constraintLeft_toRightOf="@+id/dice"
            app:layout_constraintTop_toBottomOf="@id/gridlayout"
